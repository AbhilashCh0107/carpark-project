<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slot_layout_view"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="5dp"
    android:background="@color/cpb_green"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="5dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/ic_access_time"
        android:tint="@color/white" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img"
        android:text="1:00 to 4:00 am"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/rell"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_toRightOf="@+id/img">

        <ImageView
            android:id="@+id/plus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="12dp"
            android:tint="@color/white"
            app:srcCompat="@drawable/plus" />

        <ImageView
            android:id="@+id/min"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:textSize="12dp"
            android:tint="@color/white"
            app:srcCompat="@drawable/subtract" />

        <TextView
            android:id="@+id/slots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="17dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/booked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10sp"
        android:layout_toRightOf="@+id/rell"
        android:text="0 booked"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booked"
        android:layout_marginStart="10sp"
        android:layout_toRightOf="@+id/rell"
        android:text="1 available"
        android:textColor="@color/white" />

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/book"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimaryDark"
        android:padding="10dp"
        app:srcCompat="@drawable/book" />
</RelativeLayout>